
<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-3'>
   <h2>User info</h2>
   <%= image_tag @user.get_profile_image(100,100) %>

      <table class="table table-striped">
        
        <tbody>
          <tr>
          <th>name</th>
          <th><%= link_to @user.name, user_path(@user) %></th> 
          </tr>
          <tr>
          <th>introduction</th>
          <th><%= link_to @user.introduction, user_path(@user)%></th>
          </tr>
        </tbody>
      </table>
      <div class='row'>
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" , method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class:'btn btn-sm btn-success' %>
      <% end %>
  </div>
    

      <div class='col-md-8 offset-md-1'>
         <h2>Books</h2>
          <table class='table table-hover table-inverse'>
            <thead>
               <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
              <tbody>
              <%= @books.each do |book| %>
               <tr>
               <td><%= image_tag @user.get_profile_image(80,80) %></td>
               <td><%= @book.title %></td>
               <td><%= @book.body %></td>
               </tr>
              <% end %>
              </tbody>
          </table>
      </div>
 </div> 
</div>