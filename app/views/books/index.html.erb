
<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-3'>
   <h2>User info</h2>
   <%= image_tag @user.get_profile_image() %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>name</th>
            <th>introduction</th>
          </tr>
        </thead>

        <tbody>
          <tr>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= link_to @user.introduction, user_path(@user)%></td> 
          </tr>
        </tbody>
      </table>
        <%= link_to edit_user_path(@user), class: "btn btn btn-secondary text-white", method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
        <% end %>
  

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        
        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book', class:'btn btn-sm btn-success' %>
        
      <% end %>
  </div>
 </div>
</div>