
    <div class='col-md-3'>
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>

        <table class="table table-striped">
          
          <tbody>
            <tr>
            <th>name</th>
            <th><%= link_to user.name, user_path(user) %></th> 
            </tr>
            <tr>
            <th>introduction</th>
            <th><%= link_to user.introduction, user_path(user)%></th>
            </tr>
          </tbody>
        </table>
        <div class='row'>
          <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" , method: :get do %>
              <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
        <h1>New book</h1>
        <%= form_with model: book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class:'btn btn-sm btn-success' %>
        <% end %>
    </div>
  
